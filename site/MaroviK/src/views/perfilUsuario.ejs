<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>
<body>
    
    <%- include('partials/header') %>
    <%- include('partials/search') %>

    <div class="container-fluid contenedor_form_userProfile" style="margin-top: 30px;">

      <div class="row justify-content-center">
        <form id="formUpdateUser" action="/users/updateProfile/<%= user.id %> ?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="form-row">
            <div id="previewAvatar" class="col-12 col-md-4 mt-5 d-flex flex-column align-items-center">
              <img id="imgAvatar" src="/images/users/<%= user.avatar %> " class="avatarImg" alt="avatar"width="75%" style="object-fit: cover; object-position: top;" >
              <div class="form-group w-75 mt-3">
                <input type="file" class="" id="avatarImput" name="avatar" value="<%= user.avatar %>" accept="image/png, image/jpg, image/jpeg, image/gif">
                <label id="labelAvatar" for="avatarImput"><span class="material-icons">add_photo_alternate</span>Seleccioná una imágen</label>
              </div>
            </div>
            <div class="col-12 col-md-8 ">
              <div class="form-row mt-3 ml-2 mr-2">
                <div class="form-group col-12 col-md-6 ">
                  <label for="name"></label>
                  <input type="text" name="name" class="form-control" id="name" value=<%= user.name %>>
                </div>
                <div class="form-group col-12 col-md-6">
                  <label for="last_name"></label>
                  <input type="text" name="last_name" class="form-control" id="last_name" value=<%= user.last_name %>>
                </div>
                <div class="form-group col-12">
                  <label for="email"></label>
                  <input type="email" name="email" class="form-control" id="email" value=<%= user.email %> disabled>
                </div>

                <div class="form-group col-12">
                  <label for="address">Dirección</label>
                  <input type="text" name="address" class="form-control" id="address" placeholder="Dirección" value="<%= user.address %>">
                </div>

                <div class="form-group col-12 col-md-6">
                  <label for="provincias">Provincia</label>
                  <select name="provincias" id="provincias">
                    <option value="<%= user.province %>"><%= user.province %></option>
                  </select>
                </div>

                <div class="form-group col-12 col-md-6">
                  <label for="municipios">Ciudad</label>
                  <select name="municipios" id="municipios">
                    <option value="<%= user.city %>"><%= user.city %></option>
                  </select>
                </div>

                <div class="form-group col-12 col-md-6">
                    <label for="cp">Código postal</label>
                    <input type="text" name="cp" class="form-control" id="cp" value="<%= user.cp %>">
                    <!--<select class="form-control" name="provincia" id="provinciaSelect" selected=<%= user.cp %> ></select>-->
                  </div>
              </div>
              <div class="d-md-flex justify-content-start ml-2 mt-2">
                <button type="button" class="btn-sm btn-secondary m-1"><a href="/" class="text-light">Salir sin guardar</a></button>
                <button type="submit" class="btn-sm btn-primary m-1">Actualizar datos</button>
              </div>
            </div>

          </div>
        </form>
        <div class="col-12 d-flex justify-content-end mb-3">
          <form action="/users/delete/<%= user.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn-sm btn-danger">Darse de baja</button>
          </form>
        </div>
      </div>
        
      </div>

      <%- include('partials/footer') %>
      <script src="/javascripts/updateProfile.js"></script>
</body>
</html>